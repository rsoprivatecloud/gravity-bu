#Name of the VM running Chef-Server
chefvm="<%= @chefvm %>"
#Internal IP for the Chef Server VM
chefip="<%= @chefip %>"
#Location of VM's disk
vmdiskloc="<%= @vmdiskloc %>"
#Location of VM's XML file
vmxmlloc="<%= @vmxmlloc %>"
